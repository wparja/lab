<?xml version="1.0" encoding="utf-8"?>
<objectAnimator
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:propertyName="rotation"
    android:valueFrom="0.0"
    android:valueTo="-180.0"
    android:valueType="floatType"
    android:duration="1000"
    android:repeatMode="reverse"
    android:repeatCount="1">
</objectAnimator>
<!--    propertyName="rotation" Rotates the object clockwise or anti-clockwise
        propertyName="rotationX" Rotates the object along the X-Axis
        propertyName="rotationY" Rotates the object along the Y-Axis
-->