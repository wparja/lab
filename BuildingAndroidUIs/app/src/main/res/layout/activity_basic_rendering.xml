<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.wparja.buildingandroid.Rendering.CircularActivityIndicator
        android:id="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <Button
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/c"
        android:layout_alignParentStart="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="148dp"
        android:text="click" />

    <com.wparja.buildingandroid.Rendering.Bezier
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <com.wparja.buildingandroid.Rendering.PrimitiveDrawerTransformations
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>