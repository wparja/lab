<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#fcfcfc"
    android:gravity="center">
    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/new_report_card"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_height"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:onClick="callActivity"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/image_card_width"
                    android:layout_height="@dimen/image_card_height"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circleshape"
                    android:src="@drawable/ic_baseline_note_add_24"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="@string/new_report"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/find_card"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_height"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:onClick="callActivity"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/image_card_width"
                    android:layout_height="@dimen/image_card_height"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circleshape"
                    android:src="@drawable/ic_baseline_find_in_page_24"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="@string/find"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/settings_card"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_height"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:onClick="callActivity"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/image_card_width"
                    android:layout_height="@dimen/image_card_height"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circleshape"
                    android:src="@drawable/ic_baseline_settings_24"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="@string/settings"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/dosage_card"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_height"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:onClick="callActivity"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/image_card_width"
                    android:layout_height="@dimen/image_card_height"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circleshape"
                    android:src="@drawable/ic_calculator_black_24dp"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="@string/settings"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>